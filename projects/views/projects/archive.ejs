<head>
    <link rel="stylesheet" href="/stylesheets/style.css">
  </head>
  
  <h1>Archived Projects</h1>
  
  <nav>
    <a href="/projects">‚Üê Back to All Projects</a>
  </nav>
  
  <% if (projects.length === 0) { %>
    <p><strong>No archived projects found.</strong></p>
  <% } else { %>
    <% projects.forEach(p => { %>
      <div class="project-card">
        <h2><%= p.name %></h2>
        <p><strong>Description:</strong> <%= p.description %></p>
        <p><strong>Leader:</strong> <%= p.leader?.username || 'Unknown' %></p>
        <p><strong>Archived:</strong> Yes</p>
        <p><strong>Team:</strong></p>
        <ul>
          <% p.teamMembers.forEach(m => { %>
            <li><%= m.username || m.name || 'Unknown' %></li>
          <% }) %>
        </ul>
        <a href="/projects/<%= p._id %>">üîç View</a>
      </div>
    <% }) %>
  <% } %>